{
  "manifest_version": 3,
  "name": "Zhong PWA",
  "short_name": "ZhongPWA",
  "version": "1.3",
  "author": "Jeffry Tambari",
  "homepage_url": "https://zhongpwa.vrhythm.net",
  "description": "Zhong PWA for learning Mandarin, hovering/touching Chinese character to reveal the meaning",
  "theme_color": "#ABCDEF",
  "background_color": "#EEEEEE",
  "display": "standalone",
  "start_url": "/",
  "scope": "/",
  "id": "/?homescreen=1",
  "start_url": "/",
  "scope_extensions": [
    {"origin": "*.vrhythm.net"},
    {"origin": "zhongpwa.vrhythm.net"}
  ],
  "launch_handler": {
    "client_mode": ["navigate-existing", "auto"]
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "service_worker": "sw.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "data/*.idx",
        "data/*.u8",
        "zhongwen/data/*.idx",
        "zhongwen/data/*.u8",
        "css/*",
        "js/*",
        "images/*",
        "dialogues/*",
        "directory/*",
        "hsk/*",
        "lyrics/*",
        "plugins/*",
        "zhongwen/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "screenshots" : [
    {
      "src": "images/screenshot.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "wide",
      "label": "ZhongPWA"
    },
    {
      "src": "images/screenshot.png",
      "sizes": "512x512",
      "type": "image/png",
      "label": "ZhongPWA"
    }
  ],
  "display_override": [
    "window-controls-overlay",
    "standalone",
    "browser"
  ],
  "capture_links": "new-client",
  "edge_side_panel": {
    "preferred_width": 400
  },
  "handle_links": "preferred",
  "permissions": [
    "INTERNET",
    "ACCESS_NETWORK_STATE"
  ],
  "share_target": {
    "action": "/share-target",
    "method": "GET",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "icon": "images/256x256.png",
  "icons": [
    {
      "type": "image/png",
      "sizes": "192x192",
      "src": "images/192x192.png"
    },
    {
      "type": "image/png",
      "sizes": "48x48",
      "src": "images/48x48.png"
    },
    {
      "type": "image/png",
      "sizes": "72x72",
      "src": "images/72x72.png"
    },
    {
      "type": "image/png",
      "sizes": "128x128",
      "src": "images/128x128.png"
    },
    {
      "type": "image/png",
      "sizes": "384x384",
      "src": "images/384x384.png"
    },
    {
      "type": "image/png",
      "sizes": "512x512",
      "src": "images/512x512.png"
    },
    {
      "type": "image/png",
      "sizes": "96x96",
      "src": "images/96x96.png"
    },
    {
      "type": "image/png",
      "sizes": "1024x1024",
      "src": "images/1024x1024_maskable.png",
      "purpose": "maskable"
    }
  ],
  "categories": ["learning", "utilities", "chinese"]
}